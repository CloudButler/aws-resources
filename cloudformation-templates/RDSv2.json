{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "",
  "Metadata": {},
  "Parameters": {},
  "Mappings": {},
  "Conditions": {},
  "Resources": {
      "RDSDemoVpc": {
        "Type": "AWS::EC2::VPC",
        "Properties": {
          "CidrBlock": "192.168.0.0/16",
          "EnableDnsHostnames": "True",
          "EnableDnsSupport": "True",
        	"Tags": [
        	  {
        	    "Key": "Name",
        	    "Value": "RDSDemoVpc"
        	  }
        	]
        }
      },
      "myInternetGateway" : {
         "Type" : "AWS::EC2::InternetGateway",
         "Properties" : {
           "Tags" : [ {"Key" : "Name", "Value" : "myInternetGateway"}]
         }
      },
      "AttachGateway" : {
         "Type" : "AWS::EC2::VPCGatewayAttachment",
         "Properties" : {
            "VpcId" : { "Ref" : "RDSDemoVpc" },
            "InternetGatewayId" : { "Ref" : "myInternetGateway" }
          }
      },
      "PrivateSubnet1":{
        "Type": "AWS::EC2::Subnet",
        "Properties": {
          "AvailabilityZone": "us-east-1a",
          "VpcId": {
            "Ref": "RDSDemoVpc"
          },
          "CidrBlock": "192.168.1.0/24",
          "Tags": [
            {
              "Key": "Name",
              "Value": "PrivateSubnet1"
            }
          ]
         }
      },
      "PrivateSubnet2":{
        "Type": "AWS::EC2::Subnet",
        "Properties": {
          "AvailabilityZone": "us-east-1b",
          "VpcId": {
            "Ref": "RDSDemoVpc"
          },
          "CidrBlock": "192.168.2.0/24",
          "Tags": [
            {
              "Key": "Name",
              "Value": "PrivateSubnet2"
            }
          ]
         }
      },
      "rdsDBSubnetGroup": {
        "Type": "AWS::RDS::DBSubnetGroup",
        "Properties": {
          "DBSubnetGroupDescription": "Subnets for RDS",
          "SubnetIds": [
             {
               "Ref": "PrivateSubnet1"
             },
             {
               "Ref": "PrivateSubnet2"
             }
          ],
          "Tags": [
            {
             "Key": "Name",
             "Value": "rdsDBSubnetGroup"
            }
          ]
        }
      },
      "rdsDBInstance": {
        "Type": "AWS::RDS::DBInstance",
        "Properties": {
          "AllocatedStorage": "20",
          "DBInstanceClass": "db.t2.micro",
          "AllowMajorVersionUpgrade": "false",
          "AutoMinorVersionUpgrade": "false",
          "BackupRetentionPeriod": "7",
          "DBInstanceIdentifier": "MyRdsDemo",
          "DBName": "DBTest",
          "VPCSecurityGroups":[{ "Ref": "rdsSecurityGroup" }],
          "DBSubnetGroupName": { "Ref": "rdsDBSubnetGroup" },
          "Engine": "postgres",
          "EngineVersion": "11.5",
          "MasterUsername": "javahome",
          "MasterUserPassword": "oneforalljava",
          "MultiAZ": "false",
          "Port": "5432",
          "PubliclyAccessible": "false",
          "StorageType": "gp2",
          "Tags": [{ "Key": "Name", "Value":"MyRdsDemo" }]
        }
      },
      "rdsSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
          "GroupDescription" : "Allow RDS Connections",
          "SecurityGroupIngress" : [{
             "IpProtocol" : "tcp",
             "FromPort" : 5432,
             "ToPort" : 5432,
             "CidrIp" : "0.0.0.0/0"
          }],
          "SecurityGroupEgress" : [{
             "IpProtocol" : "tcp",
             "FromPort" : 80,
             "ToPort" : 80,
             "CidrIp" : "0.0.0.0/0"
          }],
          "VpcId" : { "Ref": "RDSDemoVpc" },
          "Tags" :  [ { "Key":"Name", "Value":"RDSSecurityGroup" }]
        }
      }
    },
    "Outputs": { }
  }
